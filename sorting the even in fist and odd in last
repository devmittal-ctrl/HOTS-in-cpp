// sortng all the even numbers at the begninng and odd at last
#include<iostream>
#include<vector>
using namespace std;
void logic(vector <int> &v){
   int left=0;
   int right=v.size()-1;
   while(left<right){
      if(v[left]%2==0) left++;
      if(v[right]%2!=0) right--;
      if(v[left]%2!=0 && v[right]%2==0){
         int temp=v[left];
         v[left]=v[right];
         v[right]=temp;
      }
      left++;
      right--;
   }
}
int main(){
   int n;
   cout<<"enter the number of the element in the array : ";
   cin>>n;
   vector <int> v;
   for(int i=0;i<n;i++){
      int ele;
      cin>>ele;
      v.push_back(ele);
   }
  logic(v);
  for(int i=0;i<n;i++){
   cout<<v[i]<<" ";
  }
   return 0;
}
